      FOR_3D(i1,i2,i3,J1,J2,J3)
      {
        xd=X0(i1,i2,i3)-x0;
        yd=X1(i1,i2,i3)-y0;

        ERRHZ(i1,i2,i3)=UHZ(i1,i2,i3) - cos(fx*xd)*cos(fy*yd)*phiHz;
