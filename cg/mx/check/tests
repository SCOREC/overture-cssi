dielectricSphereFD22.check ../runs/dielectricCyl/dielectricCyl.cmd -cyl=0 -g=solidSphereInABoxe2.order2 -kx=1 -eps1=.25 -eps2=1.0 -method=fd -tp=.01 -tf=.01 -go=go 
