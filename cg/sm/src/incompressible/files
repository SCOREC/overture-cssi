#
#  Here are the files to be compiled for incompressible solids
#

# C++ source files:
SRC_FILES += advanceIncompressible.C pressure.C projectLinearMode.C


# # *** fortran files the we always compile optimized ***
# FSRCO += advOptIsm.f
# FSRCO += advIsm2dOrder2r.f advIsm2dOrder2c.f advIsm3dOrder2r.f advIsm3dOrder2c.f 
# 
# # 4th order : future 
# # FSRCO += advIsm2dOrder4r.f advIsm2dOrder4c.f advIsm3dOrder4r.f advIsm3dOrder4c.f

# *** fortran90 files the we always compile optimized ***
FNSRCO += advOptIsm.f90
FNSRCO += advIsm2dOrder2r.f90 advIsm2dOrder2c.f90 advIsm3dOrder2r.f90 advIsm3dOrder2c.f90 

# 4th order 
FNSRCO += advIsm2dOrder4r.f90 advIsm2dOrder4c.f90 advIsm3dOrder4r.f90 advIsm3dOrder4c.f90

FNSRCO += pressureIsmOpt.f90
FNSRCO += pressureIsm2dOrder2r.f90 pressureIsm2dOrder2c.f90 \
          pressureIsm3dOrder2r.f90 pressureIsm3dOrder2c.f90 \
          pressureIsm2dOrder4r.f90 pressureIsm2dOrder4c.f90

FNSRCO += bcOptIsm.f90
FNSRCO += bcIsm2dOrder2r.f90 bcIsm2dOrder2c.f90 bcIsm3dOrder2r.f90 bcIsm3dOrder2c.f90 
FNSRCO += bcIsm2dOrder4r.f90 bcIsm2dOrder4c.f90 bcIsm3dOrder4r.f90 bcIsm3dOrder4c.f90

# BPP files: 
src/incompressible/advanceIncompressible.C : src/incompressible/advanceIncompressible.bC boundaryMacros.h; $(BPP) -quiet -clean $<

src/incompressible/pressure.C : src/incompressible/pressure.bC boundaryMacros.h; $(BPP) -quiet -clean $<

src/incompressible/projectLinearMode.C : src/incompressible/projectLinearMode.bC; $(BPP) -quiet -clean $<

src/incompressible/advOptIsm.f90: src/incompressible/advOptIsm.bf90; $(BPP) -quiet -clean -I$(Overture)/include $<
src/incompressible/bcOptIsm.f90: src/incompressible/bcOptIsm.bf90; $(BPP) -quiet -clean -I$(Overture)/include $<

src/incompressible/pressureIsmOpt.f90: src/incompressible/pressureIsmOpt.bf90 src/bcDefineFortranInclude.h; $(BPP) -quiet -clean -I$(Overture)/include $<

src/incompressible/advIsm2dOrder2r.f90 : src/incompressible/advOptIsm.f90
src/incompressible/advIsm3dOrder2r.f90 : src/incompressible/advOptIsm.f90
src/incompressible/advIsm2dOrder2c.f90 : src/incompressible/advOptIsm.f90
src/incompressible/advIsm3dOrder2c.f90 : src/incompressible/advOptIsm.f90
src/incompressible/advIsm2dOrder4r.f90 : src/incompressible/advOptIsm.f90
src/incompressible/advIsm3dOrder4r.f90 : src/incompressible/advOptIsm.f90
src/incompressible/advIsm2dOrder4c.f90 : src/incompressible/advOptIsm.f90
src/incompressible/advIsm3dOrder4c.f90 : src/incompressible/advOptIsm.f90

src/incompressible/pressureIsm2dOrder2r.f90 : src/incompressible/pressureIsmOpt.f90
src/incompressible/pressureIsm2dOrder2c.f90 : src/incompressible/pressureIsmOpt.f90
src/incompressible/pressureIsm3dOrder2r.f90 : src/incompressible/pressureIsmOpt.f90
src/incompressible/pressureIsm3dOrder2c.f90 : src/incompressible/pressureIsmOpt.f90

src/incompressible/pressureIsm2dOrder4r.f90 : src/incompressible/pressureIsmOpt.f90
src/incompressible/pressureIsm2dOrder4c.f90 : src/incompressible/pressureIsmOpt.f90

src/incompressible/bcIsm2dOrder2r.f90 : src/incompressible/bcOptIsm.f90
src/incompressible/bcIsm3dOrder2r.f90 : src/incompressible/bcOptIsm.f90
src/incompressible/bcIsm2dOrder2c.f90 : src/incompressible/bcOptIsm.f90
src/incompressible/bcIsm3dOrder2c.f90 : src/incompressible/bcOptIsm.f90
src/incompressible/bcIsm2dOrder4r.f90 : src/incompressible/bcOptIsm.f90
src/incompressible/bcIsm3dOrder4r.f90 : src/incompressible/bcOptIsm.f90
src/incompressible/bcIsm2dOrder4c.f90 : src/incompressible/bcOptIsm.f90
src/incompressible/bcIsm3dOrder4c.f90 : src/incompressible/bcOptIsm.f90


